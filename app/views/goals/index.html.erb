<h1>Goals</h1>
<div class="container">
  <% @goals.each do |goal| %>
  <div class="card">
    <div class="card-header" style="background-color:#0d6efd;color:black;">
      <table>
        <thead>
          <tr>
            <th>Name of Goal</th>
          </tr>
        </thead>
          <tbody>
            <tr>
              <td><%= goal.title %></td>
            </tr>
        </tbody>
      </table>
    </div>
    <div class="container">
      <% i = 0 %>
      <% goal.tasks.each do |t| %>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <%= t.item %><br>
            <%= t.description %>
          </li>
        </ul>
        <% i += 1 %>
        <% unless i == goal.tasks.count %>
          <hr style="color:black;">
        <% else %>
          <br>
        <% end %>
      <% end %>
    </div>
    <div class="card-footer" style="background-color:#0d6efd;">
      <%= link_to 'Show Goal', goal, class: "btn btn-info", style: "color:black;" %>
      <%= link_to 'Edit Goal', edit_goal_path(goal) , class: "btn btn-info" , style: "color:black;" %>
      <%= link_to 'Destroy Goal', goal, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-info", style: "color:black;"  %>
    </div>
  </div>
  <br>
  <% end %>
</div>

<br>

<%= link_to 'New Goal', new_goal_path, class: "btn btn-primary", id: "new_link", style: "color:black;", remote: true %>
