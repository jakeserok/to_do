<p id="notice"><%= notice %></p>

<h1>Goals</h1>
<div class="container">
  <div class="card container">
    <% @goals.each do |goal| %>
    <table>
      <thead>
        <tr>
          <th>Name of Goal</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>
        <tbody>
          <tr>
            <td><%= goal.title %></td>
            <td><%= goal.user_id %></td>
          </tr>
      </tbody>
    </table>
    <div>
      <%= link_to 'Show', goal, class: "btn btn-info", style: "color:black;" %>
      <%= link_to 'Edit', edit_goal_path(goal) , class: "btn btn-info" %>
      <%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-info", style: "color:black;"  %>
    </div>
    <table>
      <thead>
        <tr>
          <th>Item:</th>
          <th>Desription:</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <% goal.tasks.each do |t| %>
      <tbody>
        <tr colspan="3">
          <td><%= t.item %></td>
          <td><%= t.description %></td>
        </tr>
        <br>
      </tbody>
      <% end %>
    </table>
  <% end %>
  </div>
</div>

<br>

<%= link_to 'New Goal', new_goal_path %>
