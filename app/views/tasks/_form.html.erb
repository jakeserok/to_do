<%= form_with model: [@goal, @goal.tasks.build] do |f| %>
  <div class="mb-3">
    <%= f.label :item, for: "task_item", class: "form-label" %>
    <%= f.text_field :item, class: "form-control", id: "task_item", rows: "3" %>
  </div>
  <div class="mb-3">
    <%= f.label :description, for: "tasks_area", class: "form-label" %>
    <%= f.text_area :description, class: "form-control", id: "tasks_area", rows: "3" %>
  </div>
  <div>
    <%= f.submit %>
  </div>

<% end %>